
@{
    ViewBag.Title = "Login";
}
<br>
<br>
<div class="col-md-12" align="center"><h2>ลงชื่อเข้าใช้</h2></div>
<br>

<div class="form-horizontal">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {

     
            <div class="form-group" align="center">
                @Html.Label("Username", htmlAttributes: new { @class = "control-label" })
           
                @Html.TextBox("username", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Username" })
               
                                   


</div>

            <div class="form-group" style="margin-top:20px" align="center">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label " })
                
                @Html.Password("password", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Password" })
                
                
              
                    <span class="text-danger">
                @if (Session["error"] != null)
                {
                @Session["error"].ToString()}</span>

                
               



                            </div>




                            <div class="col-md-12" align="center">
            <input type="submit" class="btn btn-success" value="Login" style="margin-top:20px;"/>
</div>

    }

</div>