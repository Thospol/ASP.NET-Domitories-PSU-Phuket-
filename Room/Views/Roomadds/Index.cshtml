@model IEnumerable<Room.Models.Roomadd>

@{
    ViewBag.Title = "Index";
}
<br>
<br>
<h2 class="text-center" style="margin-top:20px">จัดการห้องพัก</h2>
<div class="col-md-12" align="center" style="margin-top:15px">
<button class="btn btn-primary" style="margin-left:5px" onclick="location.href='@Url.Action("Create", "Roomadds")'">
    <i class="glyphicon glyphicon-plus"> </i>
    <label>สร้างข้อมูลห้องพักใหม่</label>
</button>
    </div>

<p>
   
  <!-- @Html.ActionLink("Create New", "Create") -->
    @using (Html.BeginForm("Index", "Roomadds", FormMethod.Get, new { @class = "form-inline" }))
    {
    <p>
        <div class="form-group">
            <label class="sr-only"> ค้นหาโดย:</label>
    <h4 class="form-control-static" style="margin-right:10px">ค้นหาโดย:</h4>
    </div>
    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
        {
            Text = "หมายเลขห้อง",
            Value = "1"
        });
        listItems.Add(new SelectListItem
        {
            Text = "ประเภทห้อง",
            Value = "2",
            Selected = true
        });
        listItems.Add(new SelectListItem
        {
            Text = "รหัสนักศึกษา",
            Value = "3"
        });
    }
    <div class="form-group">
        @Html.DropDownList("movieGenre", new SelectList(listItems, "Value", "Text"), new { @class = "form-control" , @style = "margin-top:15px"})

    </div>
    <div class="form-group">
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Search", @style = "margin-top:15px" })

    </div>
    <input type="submit" value="ค้นหา" class="btn btn-success" style="margin-left:10px; margin-top:15px" />
    </p>
        }

    </p>
<div class="table-responsive">
    <table class="table table-hover">
        <tr style="text-align:center;">
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-pencil"> </i>
                หมายเลขห้อง
                
            </th>
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-th-list"> </i>
               <!-- @Html.DisplayNameFor(model => model.Roomtype)-->
                ประเภทห้องพัก
            </th>
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-usd"> </i>
               <!-- @Html.DisplayNameFor(model => model.Price)-->
                ราคา
            </th>
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-list"> </i>
                <!--@Html.DisplayNameFor(model => model.Status)-->
                สถานะห้องพัก
            </th>
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-user"> </i>
                <!--@Html.DisplayNameFor(model => model.StudentID)-->
                รหัสนักศึกษาคนที่1
            </th>
            <th style="text-align:center;"> 
                <i class="glyphicon glyphicon-user"> </i>
                <!--@Html.DisplayNameFor(model => model.StudentID)-->
                รหัสนักศึกษาคนที่2
            </th>
            <th style="text-align:center;">
                <i class="glyphicon glyphicon-star"> </i>
               จัดการข้อมูล

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr  style="text-align:center;">
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roomtype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID2)
                </td>
                <td>
                    <button class="btn btn-warning"  onclick="location.href='@Url.Action("Edit","Roomadds",new { id = item.ID })'" >
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>

                    <button class="btn btn-success"  style="margin-left:5px"  onclick="location.href='@Url.Action("Details","Roomadds",new { id = item.ID })'" >
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </button>

                  <!-- @Html.ActionLink("Details", "Details", new { id = item.ID }) -->  
                    <button class="btn btn-danger"  style="margin-left:5px" onclick="location.href='@Url.Action("Delete","Roomadds",new { id = item.ID })'" >
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                  <!--   @Html.ActionLink("Delete", "Delete", new { id = item.ID }) -->
                </td>
            </tr>
        }

    </table>
    </div>
