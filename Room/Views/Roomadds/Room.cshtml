@model IEnumerable<Room.Models.Roomadd>
@{
    ViewBag.Title = "Room";
}
<br>
<br>
<h2 class="text-center" style="margin-top:20px">จัดการห้องพัก</h2>


<p>


    @using (Html.BeginForm("Room", "Roomadds", FormMethod.Get, new { @class = "form-inline" }))
    {
    <p>
        <div class="form-group">
            <label class="sr-only"> ค้นหาโดย:</label>
            <h4 class="form-control-static" style="margin-right:10px">ค้นหาโดย:</h4>
        </div>
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "หมายเลขห้อง",
                Value = "1"
            });
            listItems.Add(new SelectListItem
            {
                Text = "ประเภทห้อง",
                Value = "2",
                Selected = true
            });
            listItems.Add(new SelectListItem
            {
                Text = "รหัสนักศึกษา",
                Value = "3"
            });
        }
        <div class="form-group">
            @Html.DropDownList("movieGenre", new SelectList(listItems, "Value", "Text"), new { @class = "form-control", @style = "margin-top:15px" })

        </div>
        <div class="form-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Search", @style = "margin-top:15px" })

        </div>
        <input type="submit" value="ค้นหา" class="btn btn-success" style="margin-left:10px; margin-top:15px" />
    </p>
            }

    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <tr style="text-align:center;">
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-pencil"> </i>
                   หมายเลขห้อง
                </th>
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-th-list"> </i>
                    ประเภทห้องพัก
                </th>
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-usd"> </i>
                    ราคา
                </th>
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-list"> </i>
                    สถานะห้องพัก
                </th>
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-user"> </i>
                    รหัสนักศึกษาคนที่1
                </th>
                <th style="text-align:center;">
                    <i class="glyphicon glyphicon-user"> </i>
                    รหัสนักศึกษาคนที่2
                </th>
               
            </tr>

            @foreach (var item in Model)
            {
                <tr style="text-align:center;">
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roomtype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentID2)
                    </td>
                    
                </tr>
            }

        </table>
    </div>
